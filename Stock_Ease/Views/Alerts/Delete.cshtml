@model Stock_Ease.Models.Alert

@{
    ViewData["Title"] = "Delete Alert";
}

<div class="container-fluid">
    <div class="card mb-4"> 
        <div class="card-body">
            <h1 class="mb-0">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Are you sure you want to delete this alert?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <h5 class="mt-4">Alert Details:</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Message)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Message)
                </dd>
                <dt class="col-sm-3">
                    Product
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AlertDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AlertDate)
                </dd>
                 <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsRead)
                </dt>
                <dd class="col-sm-9">
                     @if (Model.IsRead) { <span class="badge bg-success">Read</span> } else { <span class="badge bg-warning text-dark">Unread</span> }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="AlertId" />
                <input type="submit" value="Delete Alert" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
